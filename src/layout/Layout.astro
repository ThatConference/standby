---
import "../css/tailwind.css";
import "../css/menu.css";
import "../css/custom.css";
import Footer from "../components/ui/Footer.astro";
import "jos-animation/dist/jos.css";
import "@fontsource/plus-jakarta-sans/800.css";
import "@fontsource/kanit/500.css";
import "@fontsource/inter/400.css";
import "@fortawesome/fontawesome-free/css/all.css";
import { getEntryBySlug } from "astro:content";
const { title } = Astro.props;
const MetaData = await getEntryBySlug("site", "meta");
const { siteName, description, favicon } = MetaData?.data;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{siteName}{" "} | {" "}{title}</title>
    <meta
      name="description"
      content={description ? description : "THAT Conference"}
    />
    <link rel="icon" href={favicon || "/favicon.webp"} />
  </head>
  <body>
    <div class="page-wrapper relative z-[1] bg-white flex flex-col min-h-screen">
      <main class="flex-grow">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<script>
  import JOS from "jos-animation";
  JOS.init({
    passive: false,
    once: true,
    animation: "fade-up",
    timingFunction: "ease",
    threshold: 0,
    delay: 0.5,
    duration: 0.7,
    scrollDirection: "down",
    rootMargin: "0% 0% 15% 0%",
  });
</script>
